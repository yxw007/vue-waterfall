{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": [
		"lib/**/*.ts",
		"lib/**/*.d.ts",
		"lib/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
